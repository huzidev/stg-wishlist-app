 <div 
    id="wishlist-button"
    productId='{{ product.id }}'
    productHandle='{{ product.handle }}'
    productUrl='{{ product.url }}'
    style="
      background-color: {{ section.settings.button_color }}
      border-radius: {{ section.settings.border_radius }}px
      color: {{ section.settings.font_color }}
    "
  >
</div>

<script>
  window.SW_Product = 
    {%- if product -%}
      {{ product.id }} 
      {%- else -%} 
        undefined
    {%- endif -%};
  console.log("window. Product ID", window.SW_Product);
</script>

{% schema %}
{
  "name": "Wish List Button",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#007bff"
    }, 
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Button Border Radius",
      "default": 5,
      "min": 0,
      "max": 50,
      "unit": "px"
    }
  ]
}
{% endschema %}